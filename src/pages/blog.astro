---
import Layout from "../layouts/Layout.astro";
import Links from "../components/Links.astro";
---

<Layout title="blog">
	<div class="grid grid-cols-5 w-full">
    <!-- logo + links (1/5) -->
    <div class="col-span-1 flex space-x-14 items-center mx-20">
      <div class="flex flex-col space-y-8 items-end">
        <img src="jandorn-vertical.svg" alt="jandorn.com logo">
        <div class="flex flex-col items-end">
          <Links />
        </div>
      </div>
      <img src="vertical-divider.svg" alt="divider">
    </div>


    <!-- blog articles list (4/5) -->
    <div class="col-span-4">
      <div class="text-3xl">blog</div>
    </div>
  </div>
</Layout>
