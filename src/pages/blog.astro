---
import Layout from "../layouts/Layout.astro";
import Links from "../components/Links.astro";
---

<Layout title="blog">
	<div class="grid grid-cols-5 w-full mt-[8rem]">

    <!-- logo + links (1/5) -->
    <div class="col-span-1 flex flex-col space-y-8 items-center mx-20">
      <img class="w-4" src="logo_j.svg" alt="jandorn.com logo">
      <div class="flex flex-col items-end">
        <Links />
      </div>
    </div>

    <!-- blog articles list (4/5) -->
    <div class="col-span-4">
      <div class="text-4xl -mt-2">blog</div>
    </div>
  </div>
</Layout>
