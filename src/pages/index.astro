---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title="Jan Dorn">
	<div class="min-h-screen flex items-center justify-center p-0 m-0">
		<div class="bg-dark w-full h-full min-h-screen border-[1em] border-accent flex flex-col justify-center">
			<div class="flex flex-col items-center justify-center h-full">
				<h1 class="text-6xl font-semibold">Jan Dorn</h1>
				<ul class="text-lg mt-4 flex items-center">
					<li><a href="/blog">blog</a></li>
					<li class="flex items-center"><div class="h-8 w-8"><Icon name="circle-small" /></div></li>
					<li><a href="/about">about</a></li>
					<li class="flex items-center"><div class="h-8 w-8"><Icon name="circle-small" /></div></li>
					<li><a href="/work">work</a></li>
				</ul>
			</div>
		</div>
	</div>
</Layout>

<style>
a {
  position: relative;
}

a::after {
  content: "";
  position: absolute;
  bottom: -3px;
  left: 0;
  width: 0;
  height: 1px;
  background-color: currentColor;
  transition: width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

a:hover::after {
  width: 100%;
}
</style>
