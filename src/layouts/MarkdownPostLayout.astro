---
import Layout from "./Layout.astro";
import Links from "../components/Links.astro";

const { frontmatter } = Astro.props;
---

<Layout title="blog">
	<div class="grid grid-cols-5 w-full">

    <!-- logo + links (1/5) -->
    <div class="col-span-1 flex flex-col space-y-[46px] items-center mx-20">
      <img class="w-16" src="../../logo_j.svg" alt="j logo">
      <div class="flex flex-col items-end">
        <Links />
      </div>
    </div>

    <!-- blog articles list (4/5) -->
    <div class="col-span-4 mt-[4.7rem]">
      <div class="text-3xl mb-[2.8rem]">{ frontmatter.title }</div>
      <article class="prose">
        <slot />
      </article>
    </div>
  </div>
</Layout>
