---
// import "@/styles/global.css";
import "@fontsource/roboto";

export interface Props {
	title: string;
	description: string;
}

const { title } = Astro.props;
const { description } = Astro.props;
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta property="og:image" content="https://jandorn.com/og.png" />
		<meta property="og:image:type" content="image/png" />
		<meta property="og:image:width" content="400" />
		<meta property="og:image:height" content="400" />
		<meta property="og:type" content="website" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="thumbnail" content="https://jandorn.com/jandorn.png" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<div
			class="box-border overflow-y-auto flex justify-center p-0 m-0 bg-background-light w-[calc(100vw - (100vw - 100%))] min-h-screen border-[1rem] border-border-light font-sans text-primary-light text-lg"
		>
			<slot />
		</div>
	</body>
</html>
