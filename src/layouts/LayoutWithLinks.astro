---
import Layout from '@/layouts/Layout.astro'
import Links from '@/components/Links.astro'

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="flex w-full mt-[6rem]">

    <!-- nav -->
    <div class="hidden sm:flex flex-shrink-0 w-24 flex-col space-y-8 items-center mx-20">
      <img class="w-4" src="../logo_j.svg" alt="j logo">
      <div class="flex flex-col items-end">
        <Links />
      </div>
    </div>

    <!-- main -->
    <div class="flex-grow px-16 sm:px-0">
      <div class="text-4xl -mt-2 mb-7">{title}</div>
      <div>
        <slot />
      </div>
    </div>
  </div>
</Layout>
