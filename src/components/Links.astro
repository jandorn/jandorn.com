---
const isActive = (path) => {
  if (path === "/") {
    return Astro.url.pathname === "/";
  }
  return Astro.url.pathname.startsWith(path);
};
---

<p class={`${isActive("/") ? "text-black dark:text-white dark:underline dark:underline-offset-4" : "text-neutral-500 dark:text-white"} hover:text-black dark:hover:text-white dark:hover:underline underline-offset-4 text-xl sm:text-lg`}>
  <a href="/">home</a>
</p>
<p class={`${isActive("/blog") ? "text-black dark:text-white dark:underline dark:underline-offset-4" : "text-neutral-500 dark:text-white"} hover:text-black dark:hover:text-white dark:hover:underline underline-offset-4 text-xl sm:text-lg`}>
  <a href="/blog">blog</a>
</p>
<p class={`${isActive("/about") ? "text-black dark:text-white dark:underline dark:underline-offset-4" : "text-neutral-500 dark:text-white"} hover:text-black dark:hover:text-white dark:hover:underline underline-offset-4 text-xl sm:text-lg`}>
  <a href="/about">about</a>
</p>
