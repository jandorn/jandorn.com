---
const isActive = (path) => {
  if (path === '/') {
    return Astro.url.pathname === '/';
  }
  return Astro.url.pathname.startsWith(path);
}
---

<p class={`${isActive('/') ? 'text-black' : 'text-stone-400'} hover:text-black`}><a href="/">home</a></p>
<p class={`${isActive('/blog') ? 'text-black' : 'text-stone-400'} hover:text-black`}><a href="/blog">blog</a></p>
<p class={`${isActive('/about') ? 'text-black' : 'text-stone-400'} hover:text-black`}><a href="/about">about</a></p>
<p class={`${isActive('/work') ? 'text-black' : 'text-stone-400'} hover:text-black`}><a href="/work">work</a></p>
