---
const isActive = (path) => {
  if (path === '/') {
    return Astro.url.pathname === '/';
  }
  return Astro.url.pathname.startsWith(path);
}
---

<p class={`text-stone-400 ${isActive('/') ? 'text-black' : ''} hover:text-black`}><a href="/">home</a></p>
<p class={`text-stone-400 ${isActive('/blog') ? 'text-black' : ''} hover:text-black`}><a href="/blog">blog</a></p>
<p class={`text-stone-400 ${isActive('/about') ? 'text-black' : ''} hover:text-black`}><a href="/about">about</a></p>
<p class={`text-stone-400 ${isActive('/work') ? 'text-black' : ''} hover:text-black`}><a href="/work">work</a></p>
